<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <navigation-rule>
        <from-view-id>/publico/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>sucesso</from-outcome>
            <to-view-id>/template.xhtml</to-view-id>
        </navigation-case>           
        <navigation-case>
            <from-outcome>falha</from-outcome>
            <to-view-id>/publico/erroInterno.xhtml</to-view-id>
        </navigation-case> 
        <navigation-case>
            <from-outcome>nenhum</from-outcome>
            <to-view-id>/publico/erro.xhtml</to-view-id>
        </navigation-case>  
    </navigation-rule>  
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>sair</from-outcome>
            <to-view-id>/publico/login.xhtml</to-view-id>
        </navigation-case>        
    </navigation-rule> 
</faces-config>